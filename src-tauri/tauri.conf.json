{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pureya",
  "version": "0.1.0",
  "identifier": "com.sakshat.pureya",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Pureya",
        "width": 1280,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "copyright": "Copyright Â© 2025 Sakshat Shinde. GNU AGPLv3.",
    "shortDescription": "A minimal cross platform music player",
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
